<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <RadioGroup
            android:id="@+id/rad_group_camera_selector"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rad_id_front_cam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="true"
                android:text="Front Camera" />

            <RadioButton
                android:id="@+id/rad_btn_back_cam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back Camera" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rad_group_capture_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rad_group_camera_selector"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rad_btn_auto_capture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="Auto Capture" />

            <RadioButton
                android:id="@+id/rad_btn_manual_capture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Manual Capture" />


        </RadioGroup>

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/chk_box_icao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="true"
                android:text="ISO" />


            <CheckBox
                android:id="@+id/chk_box_is_compress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="false"
                android:text="compress face image" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RadioGroup
            android:id="@+id/rad_group_capture_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rad_group_camera_selector"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rad_btn_capture_mode_fast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="Frame Capture" />

            <RadioButton
                android:id="@+id/rad_btn_capture_mode_quaity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Photo capture" />


        </RadioGroup>

        <CheckBox
            android:id="@+id/chk_box_get_mrtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:text="ISO Full Frontal Crop" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_segmented"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

        <CheckBox
            android:id="@+id/chk_box_get_segmented_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:text="Segmented Full Frontal Crop" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segemnted Image Background Color RGB "/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/chk_box_get_"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_text_r"
                    android:layout_width="0dp"
                    android:hint="R"
                    android:text="125"
                    android:inputType="number"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edt_text_g"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:hint="G"
                    android:inputType="number"
                    android:text="125"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/edt_text_b"
                    android:layout_width="0dp"
                    android:hint="B"
                    android:text="125"
                    android:inputType="number"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/view_segmented_image_background"
                    android:layout_width="0dp"
                    android:background="#ccc"
                    android:layout_margin="10dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <Button
            android:id="@+id/btn_capture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Capture Face" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_face"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txt_image_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_face"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txt_liveness_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_face"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/txt_version"
       android:layout_below="@id/txt_liveness_status"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/status_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>

    <!--    <TextView-->
    <!--        android:id="@+id/txt_liveness1_status"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_above="@+id/txt_liveness2_status"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:textSize="20sp" />-->


    <!--    <TextView-->
    <!--        android:id="@+id/txt_liveness2_status"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_above="@+id/txt_version"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:textSize="20sp" />-->


    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>

